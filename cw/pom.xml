		<artifactId>avaliacao-marph</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<artifactId>cw</artifactId>
	<packaging>pom</packaging>

	<name>Containers Web</name>
	<description>Aplicação que roda num Containers Web: Tomcat7</description>

	<properties>
		<spring.version>4.1.6.RELEASE</spring.version>		
		<hibernate.version>4.3.9.Final</hibernate.version>
	</properties>

	<modules>
		<module>cw-app</module>
		<module>cw-lib</module>
